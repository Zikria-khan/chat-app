{
  "version": 2,
  "builds": [
    {
      "src": "server.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "env": {
    "MONGO_URI": "@your-mongo-uri-secret",
    "JWT_SECRET": "@your-jwt-secret" 
  }
}
 
